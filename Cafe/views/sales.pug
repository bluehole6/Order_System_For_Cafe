    link(rel='stylesheet', type='text/css',  href='stylesheets/style.css')
  
  body
    
    #mySidenav.sidenav
      a(herf='javascript:void(0)', class='closebtn', onclick='closeNav()', style="cursor:pointer") X
      a(href="/order2") 주문 관리
      a(href="/sales") 매출 관리
      a(href="/ingredient") 재료 관리
      a(href="/customer") 고객 관리
      a(href="/shop") 매장 관리
      a(herf='javascript:void(0)', id='LogoutBtn', class='logoutbtn', onclick='closeNav()', style="cursor:pointer") Logout
    
    #overlay
      table#nav_table.navbar.navbar-light.fixed-top
        tr(width='100%')
          td
            a#my_title.navbar-brand(href='/manage')
              p(style='font-size:25px') 관리자 페이지         
          td
            ul.nav.navbar
              a.nav-link( onclick="openNav()") 
                span.glyphicon.glyphicon-menu-hamburger

      h2.text-center.ma_b90(style='padding-top:30px') 매출 관리
      h3.text-center.ma_b15(style='font-size: 18px') 고객별 매출 없는 아이디 입력시 "존재하지 않는 아이디입니다." 띄우기
      
      #left.text-center
        p.ma_b25.txtSize26 매출 검색

        table#sales_search
          thead
            th(width='2%')
            th(width='1%')
            th(width='1%')
            tr
              td(style='text-align: left;') 1. 총 매출
              td
              td 
                button#SalesBtn_total.btn.btn-light(type='submit', onclick='loadSales()') 검색
            tr
              td(style='text-align: left;') 2. 날짜별 매출
              td(style='text-align: left;')
                input#sales_date(type='text', name='order_date', placeholder='yyyy-mm-dd', autocomplete="off")
              td
                button#SalesBtn_date.btn.btn-light(type='submit') 검색
            tr
              td(style='text-align: left;') 3. 월별 매출
              td(style='text-align: left;')
                input#sales_month(type='text', name='order_month', placeholder='   yyyy-mm', autocomplete="off")
              td
                button#SalesBtn_month.btn.btn-light(type='submit') 검색
            tr
              td(style='text-align: left;') 4. 고객별 매출
              td(style='text-align: left;')
                input#sales_id(type='text', name='order_id', placeholder=' 아이디 입력', autocomplete="off")
              td
                button#SalesBtn_id.btn.btn-light(type='submit') 검색 
      
      #center.text-center
        p.ma_t15.ma_b25.txtSize26 커피 순위
        table#rank_table
          thead
            tr
              th(width='1%') 순 위
              th(width='1%') 커피 이름
              th(width='1%') 판매량
          tbody


        
      #sales
        table#sales_table
          thead
            tr(width='100%')
              th(width='1%') 번호
              th(width='3%') 아이디 
              th(width='3%') 주문 음료
              th(width='1%') 수량     
              th(width='5%') 주문 날짜
              th(width='3%') 주문 금액
          tbody

          tfoot
            tr
              th.hidden
              th(colspan="5") 총 판매 금액  
              th#total_cost 0원


  body
    #myModal.modal
      .modal-content
        span.close &times;  
        form#OptionForm(action="/order")
          #Option_table
            table#Option_table
              tr
                td 사이즈
                td
                  select(name="size", style='width:80%;') 
                    option(value="S") S
                    option(value="M") M
                    option(value="L") L
              tr
                td 수　량
                td
                  select(name="number", style='width:80%;') 
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
                    option(value="8") 8
                    option(value="9") 9                     
              tr 
                td 샷추가
                td
                  input(type="checkbox", name="shot", value="add_shot")
                  input#coffee_value(type="hidden", name="C_value")
              tr 
                td 테이크아웃
                td
                  input(type="checkbox", name="takeout", value="takeout")
                  input#coffee_value(type="hidden", name="C_value")

          input#btn0.btn.btn-light(type='submit', width='100%')
          input#coffee_num.btn.btn-light(type='hidden')

    
